<!DOCTYPE html>
<html lang="en">
  <head>
    <!--meta info-->
    <meta charset="UTF-8" >
    <meta http-equiv="X-UA-Compatible" content="IE=edge" >
    <meta name="viewport" content="width=device-width, initial-scale=1.0" >

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/nav.scss" />


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&family=Playfair+Display:wght@400;900&display=swap" rel="stylesheet">

    <script src="https://kit.fontawesome.com/64e7347985.js" crossorigin="anonymous"></script>
    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/mobile-button.js"></script>
    <script defer src="/scripts/navbar.js"></script>
    <title>Story Creater</title>
  </head>
  <body>
    <%- include('partials/nav') %>
    <main>
   <form id = "create-form" method="POST" action = "/creation">
    <label for="title">Title</label>
      <textarea placeholder="Title" name="title" id="create-title"></textarea>
      <label for="content">Content</label>
      <textarea placeholder="Write a Story" name="content" id="create-story" ></textarea>
      <button class="create-button" type="submit">Create</button>
      <% if(typeof error !== 'undefined'){ %>
        <div class="error">
          <p>
            <i class="fa-solid fa-triangle-exclamation"></i>
            <%= error %></p>
        </div>
        <% } %>
    </form>

  </main>
  </body>
