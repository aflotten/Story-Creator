<form class="form-inline" action="/register" method="POST">
  <div class="form-group mb-2">
    <label for="longURL">Name:</label>
    <input
        class="form-control"
        type="name"
        name="name"
        placeholder="Name"
        style="width: 300px; margin: 1em"
    />
      <label for="longURL">Email:</label>
          <input
              class="form-control"
              type="email"
              name="email"
              placeholder="example@gmail.com"
              style="width: 300px; margin: 1em"
          />
      <label for="longURL">Password:</label>
          <input
              class="form-control"
              type="password"
              name="password"
              placeholder="YourPassword1!"
              style="width: 300px; margin: 1em"
          />
    <button type="submit" class="btn btn-primary">Register</button>
  </div>
